<%= form_for Review.new, remote: true do |f| %>
  <%= f.label(:reviewer_name) %>
  <%= f.text_field(:reviewer_name) %>
  <br>
  <%= f.label(:title) %>
  <%= f.text_field(:title) %>
  <br>
  <%= f.label(:review_text) %>
  <%= f.text_field(:review_text) %>
  <br>
  <%= f.label('Movie') %>
  <%= f.collection_select(:movie_id, Movie.all, :id, :title) %>
  <%= f.submit %>
<% end %>

<table id="review-table">

  <thead>
    <tr>
      <th>Movie Reviewed</th>
      <th>Movie Reviewer</th>
      <th>Title</th>
      <th>Review Text</th>
      <th>Review Date</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <%= render 'review', review: review %>
    <% end %>
    </tbody>
</table>

