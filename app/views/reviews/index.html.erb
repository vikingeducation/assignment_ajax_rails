<div class="container">
  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-8">
      <h1>Reviews!!</h1>
    </div>

    <div class="col-sm-12">
      <%= form_for @review, remote: true do |review|%>
      <div class=row>
        <div class="col-sm-2">
         <%= review.label :reviewer_name %>
        </div>

        <div class="col-sm-10">
           <%= review.text_field :reviewer_name %>
        </div>
      </div>

      <div class=row>
        <div class="col-sm-2">
         <%= review.label :title %>
        </div>

        <div class="col-sm-10">
           <%= review.text_field :title %>
        </div>
      </div>

      <div class=row>
        <div class="col-sm-2">
         <%= review.label :review_text %>
        </div>

        <div class="col-sm-10">
           <%= review.text_field :review_text %>
        </div>
      </div>

      <div class=row>
        <div class="col-sm-2">
         <%= review.label "Select Movie:" %>
        </div>

        <div class="col-sm-10">

          <%= review.select :movie_id, Movie.all.collect { |p| [ p.title, p.id ] } %>
        </div>
      </div>

      <%= review.submit id:"review-submit", value:"Submit Review", class: "btn btn-success active col-sm-4 "%>
  
      <% end %>
    </div>
    
    
    <div class="col-sm-10 col-sm-offset-2">
      <table id="review-table" class="table">
         <thead> 
          <tr id="header"> 
            <th> 
              Movie Reviewed
            </th>
            <th> 
              Reviewer
            </th> 
            <th> 
              Title
            </th>   
            <th> 
              Review Text
            </th>        
            <th> 
              Review Date
            </th>   
            <th> 
              Delete
            </th>  
          </tr>
        </thead>

        <tbody>
          <% @reviews.each do |review| %>
            <%= render partial: "shared/review", locals: { review: review} %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>