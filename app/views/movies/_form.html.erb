<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @movie, id: "movie-form", remote: true do |movie_fields| %>

      <%= movie_fields.label :name %>
      <%= movie_fields.text_field :name, class: "form-control" %>

      <br><br>

      <%= movie_fields.submit "Submit new movie", id: "submit-movie", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>