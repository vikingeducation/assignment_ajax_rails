<div class="col-sm-10 col-sm-offset-1">

	<section class="col-sm-12">

		<h2>Create A Movie:</h2>
		<!-- Form stuff goes here -->	
		
		<%= form_for Movie.new, :html => {:id => "#{controller_name}_#{action_name}"}, :method=> "POST", :remote => true do |f| %>
			
			<div class="form-group col-sm-4">
				<%= f.label :title %>
				<%= f.text_field :title, placeholder: "Enter Movie Title", class: "form-control" %>
			</div>
			
			<div class="form-group col-sm-4">
				<%= f.submit class: "form-control btn btn-primary" %>		
			</div>
		<% end %>

	</section>
	<!-- END Section -->

	<section class="col-sm-12">
		<h2>All Movies:</h2>
		<!-- Table goes here -->
		<div class="col-sm-6">
			<table class="table table-hover table-bordered" data-content="all-movies">
				<!-- Will use jQuery and AJAX to fill in table data -->
			</table>
		</div>
	</section>
</div>