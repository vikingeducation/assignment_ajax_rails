<h2>Movies</h2>

<table>
  <thead>
    <th>Title</th>
    <th>Release Date</th>
  </thead>
  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.name %></td>
    <td><%= movie.release_date %></td>
  </tr>
  <% end %>
</table>


